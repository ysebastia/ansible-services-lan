server {{ freeradius_site_inner_tunnel_ttls }} {
  listen {
    ipaddr = 127.0.0.1
    port = 18120
    type = auth
  }
  authorize {
    filter_username
    expiration
    logintime
    {{ freeradius_ldap_ttls_name }}
    pap
  }
  authenticate {
    Auth-Type PAP {
        pap
    }
    Auth-Type LDAP {
        {{ freeradius_ldap_ttls_name }}
    }
  }
  session {
    radutmp
  }
  post-auth {
    reply_log
    Post-Auth-Type REJECT {
      attr_filter.access_reject
      update outer.session-state {
        &Module-Failure-Message := &request:Module-Failure-Message
      }
    }
  }
  pre-proxy {
      pre_proxy_log
  }
  post-proxy {
      post_proxy_log
  }
}
